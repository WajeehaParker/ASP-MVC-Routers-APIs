@model LoginDemo.Models.User
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<div>
    @if (User.Identity.IsAuthenticated)
    {<table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Department)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Department)
                    </td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <a asp-action="Login">Details</a>
    }
</div>

<div>
    <a asp-action="Edit">Edit</a> &nbsp;
    <a asp-action="Delete">Delete</a>
    <a asp-action="Logoff">LogOff</a>
</div>